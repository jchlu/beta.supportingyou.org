---
import { Image } from "astro:assets";
import sectionImage from "@assets/e65e3737ecd35452ad5fc556f88f8cd735092c8c.jpg";
import { heading, subheading } from "../data/whatNext.json";
import WhatNexts from "@components/WhatNexts.astro";
import WhatNextImage from "@components/WhatNextImage.astro";
const altText = "Happy woman in a crowd holding a sheaf of papers and a pen";
---

<div class="overflow-hidden bg-sylightblue/20 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start"
    >
      <div class="mx-auto lg:hidden">
        <WhatNextImage />
      </div>
      <div class="px-6 lg:px-0 lg:pt-4 lg:pr-4">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
          <h2 class="text-4xl lg:text-5xl font-bold text-sygreen mb-6 md:mb-8">
            {heading}
          </h2>
          <p class="my-6 text-lg/8 text-syslate">{subheading}</p>
          <WhatNexts />
        </div>
      </div>
      <div class="mx-auto hidden lg:block">
        <WhatNextImage />
      </div>
    </div>
  </div>
</div>
